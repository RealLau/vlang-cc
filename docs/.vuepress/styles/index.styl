.carbon-ads, .bsa-cpc-wrapper, .bsa-cpc {
    display: none;
}

ul, ol, li {
    list-style: none;
}

.navbar, .links, .nav-links, .front, #blog {
    background: linear-gradient(315deg, #2196F3 0%, #2196F3 100%);
    border: none;
}

.site-name, .navbar a {
    color: #7B463D;
    font-weight: bold;
}

.content div[class*="language-"] {
    background-color: #1D0D00;
}
.content code {
    color: #7B463D;
}

//------------------------home------------------------
.front {
    max-height: 688px;
}

.home .hero {
    color: #7B463D !important;
}
.home .description {
    color: #7B463D !important;
}
//---------------------docs----------------------------------

::-webkit-scrollbar {
    width: 4px;
    height: 1px;
    background-color: #F5F5F5;
}
 
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 16px rgba(0,0,0,.3);
    background-color: #8AC3421;
}

//---------------------blog----------------------------
#blog {
    width: 100%;
    height: 11rem;
    text-align: center;
}
#blog #word {
    font-size: 3rem;
    font-weight: bold;
    color: #7B463D;
    padding: 4rem 0;
    line-height: 3.3rem; 
}

#home-list img, p img {
    width: 1.4rem;
    height: 1.4rem; 
    vertical-align: middle;
}

@media (max-width: 420px) {
    .front {
        max-height: 544px;
    }
    .content div[class*="language-"] {
        margin: 0.2rem;
    }
}
@media (min-width: 420px) and (max-width: 768px) {
    .front {
        max-height: 700px;
    }
}  

@media (max-width: 460px) {
    #blog #word {
        padding: 3rem 0;
        line-height: 3.3rem; 
    }
}
